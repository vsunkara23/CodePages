extends layout

block layout-content
    div.Banner
      a(href="/page/Main_Page" style="text-decoration: none;") 
        h3.corner-title CodePages
      div.search-area
        form(action="/search", method="get")
            input(type="search" class="search-field" placeholder="Search" name="q" id="page_search")
            button(type="submit" class="search-btn") Search
    div(class="container" style="margin-top:50px;")
        div.row
            div.col-sm 
                - var title_string = "\"" + title_list[0].title + "\"" + " Edit History"
                h3= title_string
        div(class="row" style="margin-top:20px;")
            div.col-sm
                h5 Change Description
                each val in change_list
                    p= val.change_info
            div.col-sm
                h5 Edited At
                each val in time_list
                    p= val.creation_time
            div.col-sm 
                h5 Diff
                - var string_url = "/page/" + id + "/history/" + unique_id + "/diff"
                - var n = 0;
                - var length = content_list.length;
                if length == 1
                    a(href=string_url+"?number_val="+n+"&length=1" style="color:dodgerblue") Diff
                else
                    while n < length
                        p
                            a(href=string_url+"?number_val="+n+"&length=2" style="color:dodgerblue;") Diff
                        - n=n+1
                    

    
        
    
    